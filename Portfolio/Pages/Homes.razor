@page "/home"
@attribute [Authorize(Roles = "User")]

<h1 id="home"></h1>
<PageTitle>Home</PageTitle>
<MudContainer MaxWidth="MaxWidth.Large" Class="d-flex flex-column flex-grow-1 px-16 py-16">
    <MudGrid Class="pb-16" >
        <MudItem xs="12" md="6">
            <MudImage Height="400" Width="400" ObjectFit="@ImageFit" Fluid="true" Src="img/me.jpg" Alt="Shawn" Elevation="25" Class="rounded-lg" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudText Typo="Typo.h2" Style="text-align:center" Class="px-8 pb-8">@myname</MudText>
            <MudPaper Elevation="25" Style="background-color:lightgreen;color:white" Class="d-flex align-center justify-center mud-width-full px-8 py-8">
                <MudText Align="Align.Center" Typo="Typo.body1">@summary</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
<HorizonDiv />
<AnchorNav />

