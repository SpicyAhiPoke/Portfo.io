    ObjectFit ImageFit = ObjectFit.Fill;

    string myname = "Shawn Rainiel C. Caday-Ramos";
    private string summary = "Aspiring Full-Stack Software Developer. Birb lover. Southeast Asia culture enthusiast. Fellow Mass-goer & foremost of sinners.";

